	<!-- 고객문의 계시판 글 목록 보기(전체) -->
	<select id="list" resultType="BoardVO">
		select q_num as q_Num, q_title as q_Title, q_content as q_Content, q_date as q_Date,
		
		(SELECT DISTINCT c.c_id 
		from QUESTION q, CUSTOMER c 
		where q.C_NUM = c.C_NUM 
		and c.c_num = qu.c_num) as c_Id,
		
		(SELECT DISTINCT s_sname 
		from ADSHOPPINGMALL a, SHOPPINGMALL s, QUESTION q 
		where q.s_num = a.s_num 
		and s.s_num = q.s_num 
		and q.q_num = qu.q_num) as s_Name
		from question qu
		
			<!-- <if test="area != null">
				<where>
					<foreach collection="area" item="area">
						${area} LIKE #{searchKey}
					</foreach>
				</where>
			</if>
			<if test="searchMine !=null">
				<where>
					c_num = #{searchMine}
				</where>
			</if> -->
			order by q_num desc
	</select>
	
	<select id="adShoppingMallList" resultType="AdShoppingMall">
		select 
		(SELECT DISTINCT s_sname 
		 from ADSHOPPINGMALL a, SHOPPINGMALL s 
		 where s.s_num = a.s_num 
		 and s.s_num = ad.s_num) as S_Name from adshoppingmall ad
	</select>
	
	<insert id="insert" parameterType="BoardVO">
		insert into question 
		(q_num, q_title, q_content, q_date, c_num, s_num)
		VALUES
		((select nvl(max(q_num+1),1) from question),#{q_Title},#{q_Content},sysdate,#{c_Num},#{s_Num})
	</insert>
	<select id="getS_Num" parameterType="String" resultType="String">
		select s_num from shoppingmall where s_sname = #{value}
	</select>
	<select id="detail" resultType="BoardVO" parameterType="int">
		select temp.*,(SELECT c.c_id from question q, customer c where q.c_num=c.c_num 
              and q_num=#{value})as c_Id 
			  from ((SELECT * FROM question)temp) where q_num=#{value}
		<!-- select * from question where q_num = #{value} -->
	</select>
	<update id="update" parameterType="BoardVO">
		update question set 
			q_title = #{q_Title},
			q_content = #{q_Content}
			where q_num = #{q_Num}
	</update>
	<delete id="delete">
		delete from question where q_num = #{value}
	</delete>
	<select id="totalCount" resultType="int">
		select count(q_num) from question
	</select>
	
